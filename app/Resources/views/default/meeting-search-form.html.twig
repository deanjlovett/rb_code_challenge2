{% extends 'base.html.twig' %}

{% block body %}
    <div id="top">
        <h1>Find Meetings Near Me</h1>
        <h3>say something witty to impress teh code reviewer</h3>
        <h3>Oops... I mean please enter your data below:</h3>
        <form action="/meeting/results" method="post">
            {#
        "street" => "517 4th Ave.",
        "state_abbr" => "CA",
        "city" => "San Diego",
        "zip" => "92101"
            #}

            <br>
            <label for="street_address">Street Address:</label>
            <input type="text" id="street_address" name="street" value="517 4th Ave." required> <span class="error"
                                                                                         id="address_error"></span>
            <br>
            <label for="city">City:</label>
            <input type="text" id="city" name="city" value="San Diego" required> <span class="error" id="city_error"></span>
            <br>
            <label for="state">State:</label>
            <input type="text" id="state" name="state_abbr" value="CA"required> <span class="error" id="state_error"></span>
            <br>
            <label for="zip_code">Zip Code:</label>
            <input type="text" id="zip_code" name="zip" value="92101" required> <span class="error" id="zip_code_error"></span>
            <br>
            <br>
            within
            <select id="miles" name="miles" size="1">
                <option value="any">Any Distance</option>
                <option value="1">1 mile</option>
                <option value="5">5 miles</option>
                <option value="25">25 miles</option>
                <option value="50">50 miles</option>
                <option value="100">100 miles</option>
            </select>
            of address.
            <span class="error" id="distance_error"></span>
            <br>
            <br>
            Desired day of the week:
            <select id="day" name="day" size="1">
                <option value="any">Any Day</option>
                <option value="monday" selected="selected">Monday</option>
                <option value="tuesday">Tuesday</option>
                <option value="wednesday">Wednesday</option>
                <option value="thursday">Thursday</option>
                <option value="friday">Friday</option>
                <option value="saturday">Saturday</option>
                <option value="sunday">Sunday</option>
            </select>
            <span class="error" id="day_error"></span>

            <br><br>
            <input type="submit" id="mysubmit" value="Submit Form">
            <br>
        </form>
    </div>

    <div id="message">
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        /* type selectors */
        article, aside, figure, figcaption, footer, header, nav, section {
            display: block;
        }

        * {
            margin: 10;
            padding: 10;
        }

        body {
            font-family: Verdana, Arial, Helvetica, sans-serif;
            width: 650px;
            background-color: silver;
        }

        h1 {
            font-size: 150%;
        }

        h2 {
            font-size: 120%;
            padding: .25em 0 .25em 25px;
        }

        p {
            padding-bottom: .25em;
            padding-left: 25px;
        }

        .error {
            color: red;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}
